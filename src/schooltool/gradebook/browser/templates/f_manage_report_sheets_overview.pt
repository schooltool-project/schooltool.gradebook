<div class="manage-view" i18n:domain="schooltool"
     tal:define="templates view/templates">
  <h3>
    <a title="Manage Report Sheet Templates"
       tal:attributes="href string:${context/@@absolute_url}/gradebook/templates"
       i18n:attributes="title"
       i18n:translate="">
      Report Sheet Templates
    </a>
  </h3>
  <p i18n:translate="" tal:condition="templates">
    There are
    <metal:block tal:replace="python:len(templates)" i18n:name="count"/>
    report sheet templates defined
  </p>
  <p i18n:translate="" tal:condition="not: templates">
    There are no report sheet templates defined
  </p>
</div>
