<tal:define define="dummy view/update"/>
<html metal:use-macro="view/@@standard_macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" i18n:translate="">Delete Worksheet</title>
</head>
<body>

<h1 metal:fill-slot="content-header"
    tal:content="string:Delete Worksheet '${context/title}'">Delete Worksheet</h1>

<metal:block metal:fill-slot="body">
  <div style="padding-bottom: 1em">
    <p>Are you sure you want to delete this workskeet together with all its activities?</p>
  </div>

  <form method="post"
        tal:attributes="action string:${context/@@absolute_url}/delete.html">
    <div class="controls">
      <input type="submit" class="button-ok" name="DELETE" value="Delete"/>
      <input type="submit" class="button-cancel" name="CANCEL" value="Cancel"/>
    </div>
  </form>

</metal:block>
</body>
</html>
