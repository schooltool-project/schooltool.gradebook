<html metal:use-macro="view/@@standard_macros/page" i18n:domain="schooltool.gradebook">
<head>
  <title metal:fill-slot="title" tal:content="string: ${view/worksheet} for ${view/student} in ${view/section}" />
</head>
<body>
  <h1 metal:fill-slot="content-header" i18n:translate="">
    <span tal:replace="string: ${view/worksheet} for ${view/student} in ${view/section}" />
  </h1>

<metal:block metal:fill-slot="body">
  <div>
    <div class="info-block"
         tal:repeat="block view/blocks">
      <h3 tal:content="block/label" />
      <p tal:condition="not: block/comment"
         tal:content="block/content" />
      <tal:block condition="block/comment"
                 repeat="paragraph block/paragraphs">
        <p tal:content="structure paragraph"/>
      </tal:block>
    </div>
  </div>
</metal:block>
</body>
</html>

